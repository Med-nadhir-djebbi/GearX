{% extends 'base.html.twig' %}

{% block title %}Change Password - GearX{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-dark-gray p-5 shadow-lg surround">
                <div class="w-full justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="chakra-petch-bold text-6xl font-bold text-center">CHANGE PASSWORD</h1>
                        <div class="separator-line my-3"></div>
                        <p class="chakra-petch-light text-lighter text-center">Update your account security</p>
                    </div>
                </div>
                
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-danger border border-danger bg-darker mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-3 text-danger fs-4"></i>
                            <p class="mb-0 chakra-petch-medium">{{ message }}</p>
                        </div>
                    </div>
                {% endfor %}
                
                <div class="form-container p-4 bg-darker border-1 border-zinc-700 ">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    
                    <div class="row mb-4">
                        <div class="col-md-12">
                            {{ form_label(form.old_password, 'CURRENT PASSWORD', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter mb-2'}}) }}
                            {{ form_widget(form.old_password, {'attr': {
                                'class': 'form-control bg-dark border-zinc-700 text-lighter',
                                'placeholder': 'Enter your current password'
                            }}) }}
                            <div class="form-error text-danger mt-1">
                                {{ form_errors(form.old_password) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            {{ form_label(form.new_password.first, 'NEW PASSWORD', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter mb-2'}}) }}
                            {{ form_widget(form.new_password.first, {'attr': {
                                'class': 'form-control bg-dark border-zinc-700 text-lighter',
                                'placeholder': 'Enter your new password'
                            }}) }}
                            <div class="form-error text-danger mt-1">
                                {{ form_errors(form.new_password.first) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.new_password.second, 'CONFIRM NEW PASSWORD', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter mb-2'}}) }}
                            {{ form_widget(form.new_password.second, {'attr': {
                                'class': 'form-control bg-dark border-zinc-700 text-lighter',
                                'placeholder': 'Confirm your new password'
                            }}) }}
                            <div class="form-error text-danger mt-1">
                                {{ form_errors(form.new_password.second) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        {{ form_widget(form.submit, {'attr': {
                            'class': 'gaming-button btn-block',
                            'value': 'UPDATE PASSWORD'
                        }}) }}
                    </div>
                    
                    {{ form_end(form) }}
                </div>
                
                <div class="mt-4 p-3 bg-darker border-1 border-warning ">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-lock-fill me-3 text-warning fs-4"></i>
                        <p class="mb-0 chakra-petch-light text-lighter">
                            For security reasons, you'll be asked to log in again after changing your password.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
