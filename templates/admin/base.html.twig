{% extends 'base.html.twig' %}

{% block title %}GearX Admin{% endblock %}

{% block body %}
<div class="admin-wrapper">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <h2 class="text-gradient">GearX</h2>
        </div>
        <nav class="sidebar-nav">
            <a href="{{ path('admin_dashboard') }}" class="nav-item {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>
            <a href="{{ path('admin_products') }}" class="nav-item {% if app.request.get('_route') starts with 'admin_products' %}active{% endif %}">
                <i class="fas fa-gamepad"></i>
                <span>Products</span>
            </a>
            <a href="{{ path('admin_orders') }}" class="nav-item {% if app.request.get('_route') starts with 'admin_orders' %}active{% endif %}">
                <i class="fas fa-shopping-cart"></i>
                <span>Orders</span>
            </a>
            <a href="{{ path('admin_users') }}" class="nav-item {% if app.request.get('_route') starts with 'admin_users' %}active{% endif %}">
                <i class="fas fa-users"></i>
                <span>Users</span>
            </a>
            <a href="{{ path('admin_dropships') }}" class="nav-item {% if app.request.get('_route') starts with 'admin_dropships' %}active{% endif %}">
                <i class="fas fa-truck"></i>
                <span>Dropships</span>
            </a>
            <div class="nav-footer">
                <a href="{{ path('home') }}" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Back to Site</span>
                </a>
            </div>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
        <header class="admin-header">
            <div class="header-title">
                <h1>{% block page_title %}Dashboard{% endblock %}</h1>
            </div>
            <div class="header-actions">
                {% block header_actions %}{% endblock %}
            </div>
        </header>

        <div class="admin-content">
            {% block admin_content %}{% endblock %}
        </div>
    </main>
</div>

<style>
    .admin-wrapper {
        display: flex;
        min-height: 100vh;
        background: #121212;
    }

    /* Sidebar Styles */
    .admin-sidebar {
        width: 250px;
        background: rgba(31, 31, 31, 0.95);
        border-right: 1px solid #404040;
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
    }

    .sidebar-header {
        padding: 2rem;
        border-bottom: 1px solid #404040;
    }

    .text-gradient {
        background: linear-gradient(45deg, #00ff9d, #00cc7d);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .sidebar-nav {
        padding: 1rem 0;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 1rem 2rem;
        color: #ffffff;
        text-decoration: none;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
    }

    .nav-item i {
        width: 24px;
        margin-right: 1rem;
        color: #00ff9d;
    }

    .nav-item:hover, .nav-item.active {
        background: rgba(0, 255, 157, 0.1);
        border-left-color: #00ff9d;
        transform: translateX(5px);
    }

    .nav-footer {
        margin-top: auto;
        border-top: 1px solid #404040;
        padding-top: 1rem;
    }

    /* Main Content Styles */
    .admin-main {
        flex-grow: 1;
        margin-left: 250px;
        padding: 2rem;
    }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 1rem 2rem;
        background: rgba(31, 31, 31, 0.95);
        border: 1px solid #404040;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .header-title h1 {
        margin: 0;
        font-size: 2rem;
        color: #00ff9d;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .admin-content {
        background: rgba(31, 31, 31, 0.95);
        border: 1px solid #404040;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    /* Button Styles */
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: linear-gradient(45deg, #00ff9d, #00cc7d);
        border: none;
        color: #121212;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 255, 157, 0.2);
    }

    .btn-outline {
        background: transparent;
        border: 2px solid #00ff9d;
        color: #00ff9d;
    }

    .btn-outline:hover {
        background: #00ff9d;
        color: #121212;
    }

    .btn-danger {
        background: linear-gradient(45deg, #ff4d4d, #cc0000);
        border: none;
        color: #ffffff;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 77, 77, 0.2);
    }

    /* Card Styles */
    .card {
        background: rgba(31, 31, 31, 0.95);
        border: 1px solid #404040;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 255, 157, 0.15);
    }

    /* Grid Layout */
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    /* Table Styles */
    .table-container {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        color: #ffffff;
    }

    .table th {
        background: linear-gradient(180deg, #1f1f1f, #121212);
        color: #00ff9d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 1rem;
        border-bottom: 2px solid #00ff9d;
    }

    .table td {
        padding: 1rem;
        border-bottom: 1px solid #404040;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: rgba(0, 255, 157, 0.05);
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #00ff9d;
        font-weight: 600;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        background: #2d2d2d;
        border: 1px solid #404040;
        border-radius: 5px;
        color: #ffffff;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #00ff9d;
        box-shadow: 0 0 0 0.2rem rgba(0, 255, 157, 0.25);
        outline: none;
    }

    /* Stats Card */
    .stats-card {
        text-align: center;
        padding: 2rem;
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #00ff9d;
        margin-bottom: 0.5rem;
    }

    .stats-label {
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.875rem;
    }

    /* Custom Scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #121212;
    }

    ::-webkit-scrollbar-thumb {
        background: #00ff9d;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #00cc7d;
    }
</style>
{% endblock %} 