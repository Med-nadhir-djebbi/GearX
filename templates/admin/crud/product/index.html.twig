{% extends '@admin/crud/index.html.twig' %}

{% block main %}
<div class="product-grid">
    {% for product in entities %}
    <div class="product-card">
        <div class="product-image">
            {% if product.image %}
                <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}">
            {% else %}
                <div class="no-image">
                    <i class="fas fa-image"></i>
                </div>
            {% endif %}
        </div>
        <div class="product-info">
            <h3>{{ product.name }}</h3>
            <div class="product-meta">
                <span class="price">â‚¬{{ product.price }}</span>
                <span class="stock">Stock: {{ product.stock }}</span>
            </div>
            <div class="product-category">
                <span class="badge">{{ product.category.name }}</span>
            </div>
        </div>
        <div class="product-actions">
            <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\ProductCrudController').setAction('edit').setEntityId(product.id) }}" 
               class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\ProductCrudController').setAction('delete').setEntityId(product.id) }}" 
               class="btn btn-sm btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
    {% endfor %}
</div>

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        padding: 1rem;
    }

    .product-card {
        background: rgba(31, 31, 31, 0.9);
        border: 1px solid #404040;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 255, 157, 0.15);
    }

    .product-image {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image img {
        transform: scale(1.1);
    }

    .no-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #2d2d2d;
        color: #404040;
        font-size: 3rem;
    }

    .product-info {
        padding: 1.5rem;
    }

    .product-info h3 {
        margin: 0;
        font-size: 1.25rem;
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .product-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
    }

    .price {
        color: #00ff9d;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .stock {
        color: #b3b3b3;
    }

    .product-category .badge {
        background: linear-gradient(45deg, #00ff9d, #00cc7d);
        color: #121212;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.75rem;
    }

    .product-actions {
        padding: 1rem 1.5rem;
        display: flex;
        gap: 1rem;
        border-top: 1px solid #404040;
    }

    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }

    .btn-danger {
        background: linear-gradient(45deg, #ff4d4d, #cc0000);
        border: none;
        color: #ffffff;
    }

    .btn-danger:hover {
        background: linear-gradient(45deg, #cc0000, #ff4d4d);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 77, 77, 0.2);
    }
</style>
{% endblock %} 