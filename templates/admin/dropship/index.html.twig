{% extends 'admin/base.html.twig' %}

{% block title %}Dropships - GearX Admin{% endblock %}

{% block body %}
<div class="container-fluid bg-darker min-h-screen">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark-gray border-r border-primary sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <i class="fas fa-home me-2 text-primary"></i>
                            <span class="text-lighter">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_products') }}">
                            <i class="fas fa-box me-2 text-primary"></i>
                            <span class="text-lighter">Products</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_orders') }}">
                            <i class="fas fa-shopping-cart me-2 text-primary"></i>
                            <span class="text-lighter">Orders</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_users') }}">
                            <i class="fas fa-users me-2 text-primary"></i>
                            <span class="text-lighter">Users</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('admin_dropships') }}">
                            <i class="fas fa-truck me-2 text-primary"></i>
                            <span class="text-lighter">Dropships</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 bg-darker">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary">
                <h1 class="h2 text-lighter">Dropships Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="{{ path('admin_dropships_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> New Dropship
                    </a>
                </div>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-3"></i>
                        {{ message }}
                    </div>
                </div>
            {% endfor %}

            <div class="card bg-dark-gray border border-primary shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered border-primary" width="100%" cellspacing="0">
                            <thead>
                                <tr class="text-lighter">
                                    <th class="border-primary">ID</th>
                                    <th class="border-primary">Name</th>
                                    <th class="border-primary">Company</th>
                                    <th class="border-primary">Email</th>
                                    <th class="border-primary">Phone</th>
                                    <th class="border-primary">Status</th>
                                    <th class="border-primary">Created At</th>
                                    <th class="border-primary">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for dropship in dropships %}
                                    <tr class="text-lighter">
                                        <td class="border-primary">#{{ dropship.id }}</td>
                                        <td class="border-primary">{{ dropship.name }}</td>
                                        <td class="border-primary">{{ dropship.company }}</td>
                                        <td class="border-primary">{{ dropship.email }}</td>
                                        <td class="border-primary">{{ dropship.phone }}</td>
                                        <td class="border-primary">
                                            <span class="badge {% if dropship.status == 'active' %}bg-success{% else %}bg-danger{% endif %}">
                                                {{ dropship.status|upper }}
                                            </span>
                                        </td>
                                        <td class="border-primary">{{ dropship.createdAt|date('Y-m-d H:i') }}</td>
                                        <td class="border-primary">
                                            <div class="btn-group">
                                                <a href="{{ path('admin_dropships_edit', {id: dropship.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form action="{{ path('admin_dropships_delete', {id: dropship.id}) }}" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this dropship?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.sidebar {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 100;
    padding: 48px 0 0;
}

.sidebar .nav-link {
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    transition: all 0.3s;
}

.sidebar .nav-link:hover {
    background-color: rgba(99, 102, 241, 0.1);
}

.sidebar .nav-link.active {
    background-color: rgba(99, 102, 241, 0.2);
}

.sidebar .nav-link.active span {
    color: #6366f1;
}

main {
    margin-top: 48px;
}

.table {
    color: #e5e7eb;
}

.table td, .table th {
    background-color: #1f2937;
}

.card {
    background-color: #1f2937;
}

.btn-outline-primary {
    color: #6366f1;
    border-color: #6366f1;
}

.btn-outline-primary:hover {
    background-color: #6366f1;
    color: #fff;
}

.btn-outline-danger {
    color: #ef4444;
    border-color: #ef4444;
}

.btn-outline-danger:hover {
    background-color: #ef4444;
    color: #fff;
}

.badge {
    font-weight: 500;
    padding: 0.5em 0.75em;
}

.alert {
    background: rgba(31, 31, 31, 0.95);
}

.alert-success {
    border-color: #00ff9d;
    color: #e5e7eb;
}

.alert-success .text-primary {
    color: #00ff9d !important;
}

.btn-group {
    display: flex;
    gap: 0.5rem;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>
{% endblock %} 