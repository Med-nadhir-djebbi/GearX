{% extends 'base.html.twig' %}

{% block title %}Dropships Management - GearX Admin{% endblock %}

{% block body %}
<div class="container-fluid bg-darker min-h-screen">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark-gray border-r border-primary sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <i class="fas fa-home me-2 text-primary"></i>
                            <span class="text-lighter">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_products') }}">
                            <i class="fas fa-box me-2 text-primary"></i>
                            <span class="text-lighter">Products</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_orders') }}">
                            <i class="fas fa-shopping-cart me-2 text-primary"></i>
                            <span class="text-lighter">Orders</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_users') }}">
                            <i class="fas fa-users me-2 text-primary"></i>
                            <span class="text-lighter">Users</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('admin_dropships') }}">
                            <i class="fas fa-truck me-2 text-primary"></i>
                            <span class="text-lighter">Dropships</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 bg-darker">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary">
                <h1 class="h2 text-lighter">Dropships Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-plus"></i> Add New Dropship
                    </button>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card bg-dark-gray border border-primary shadow h-100">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Dropships</div>
                                    <div class="h5 mb-0 font-weight-bold text-lighter">{{ dropships|length }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-truck fa-2x text-primary opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card bg-dark-gray border border-primary shadow h-100">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Active Dropships</div>
                                    <div class="h5 mb-0 font-weight-bold text-lighter">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-primary opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card bg-dark-gray border border-primary shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered border-primary" width="100%" cellspacing="0">
                            <thead>
                                <tr class="text-lighter">
                                    <th class="border-primary">ID</th>
                                    <th class="border-primary">Name</th>
                                    <th class="border-primary">Contact</th>
                                    <th class="border-primary">Products</th>
                                    <th class="border-primary">Status</th>
                                    <th class="border-primary">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if dropships|length > 0 %}
                                    {% for dropship in dropships %}
                                    <tr class="text-lighter">
                                        <td class="border-primary">{{ dropship.id }}</td>
                                        <td class="border-primary">{{ dropship.name }}</td>
                                        <td class="border-primary">{{ dropship.contact }}</td>
                                        <td class="border-primary">{{ dropship.products|length }}</td>
                                        <td class="border-primary">
                                            {% if dropship.isActive %}
                                                <span class="badge bg-green-600 text-green-100">Active</span>
                                            {% else %}
                                                <span class="badge bg-gray-600 text-gray-100">Inactive</span>
                                            {% endif %}
                                        </td>
                                        <td class="border-primary">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center text-lighter border-primary">No dropships found. Click the "Add New Dropship" button to create one.</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.sidebar {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 100;
    padding: 48px 0 0;
}

.sidebar .nav-link {
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    transition: all 0.3s;
}

.sidebar .nav-link:hover {
    background-color: rgba(99, 102, 241, 0.1);
}

.sidebar .nav-link.active {
    background-color: rgba(99, 102, 241, 0.2);
}

.sidebar .nav-link.active span {
    color: #6366f1;
}

main {
    margin-top: 48px;
}

.table {
    color: #e5e7eb;
}

.table td, .table th {
    background-color: #1f2937;
}

.card {
    background-color: #1f2937;
}

.btn-outline-primary {
    color: #6366f1;
    border-color: #6366f1;
}

.btn-outline-primary:hover {
    background-color: #6366f1;
    color: #fff;
}

.btn-outline-danger {
    color: #ef4444;
    border-color: #ef4444;
}

.btn-outline-danger:hover {
    background-color: #ef4444;
    color: #fff;
}

.badge {
    font-weight: 500;
    padding: 0.5em 0.75em;
}

.bg-green-600 {
    background-color: #059669;
}

.text-green-100 {
    color: #d1fae5;
}

.bg-gray-600 {
    background-color: #4b5563;
}

.text-gray-100 {
    color: #f3f4f6;
}
</style>
{% endblock %}