{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}GearX - Your Electronics Superstore{% endblock %}

{% block full_width_hero %}
    <div class="hero-section bby">
        <img src="{{ asset('assets/img/banner.png') }}" alt="Banner">

        <div class="diagonal-line" style="width: 200px; left: 5%; top: 30%;"></div>
        <div class="diagonal-line" style="width: 350px; right: 0; top: 20%; transform: rotate(45deg); transform-origin: right;"></div>
        
        <div class="tech-line" style="width: 200px; left: 5%; bottom: 30%;"></div>
        <div class="tech-line" style="width: 150px; right: 10%; bottom: 40%;"></div>
        
        
        <div class="container h-100 position-relative px-[6vw]" style="z-index: 3;">
            <div class="h-100 flex items-center justify-content-center">
                <div class="col-lg-6 h-100 w-100">
                    <div class="text-white flex flex-col items-center justify-content-center h-100">
                    <div class="h-50 w-50"></div>
                        <h1 class="display-3 fw-bold mb-4 chakra-petch-bold text-white text-center">LEVEL UP YOUR<br>GAMING EXPERIENCE</h1>
                        <p class="lead fs-4 mb-5 chakra-petch-light text-center">Your one-stop shop for all gaming gear and electronics. Find the latest technology at the best prices!</p>
                        
                        <div class="d-flex gap-3">
                            <a href="#featured-products" class="gaming-button">VIEW MORE</a>
                            <a href="{{ path('app_collections') }}" class="gaming-button">SHOP NOW</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
{# "WHO ARE WE" Section #}
<div id="intro" class="bby py-10 sec"> {# Increased vertical padding for consistency #}
    <div class="container text-center">
        <h2 class="display-5 mb-4 chakra-petch-bold text-primary font-bold">WHO ARE WE</h2>
        <p class="lead chakra-petch-regular text-light text-2xl max-w-3xl mx-auto">Were are a bunch of software engineers at INSAT that share a passion for gaming.<br>
        We decided to cultivate the best gaming hardware and gear just for you!</p>
    </div>
</div>

{# Scrolling Text Section #}
<div id="goof" class="bby py-4 sec overflow-hidden"> {# Increased vertical padding #}
    <div class="text-center">
        <div class="scrolling-container">
            <div class="scrolling-text">
                UNLOCK YOUR POTENTIAL <img src="{{ asset('assets/img/biohazard.png') }}" alt="Biohazard" class="separator-img"> 
                LEVEL UP YOUR SETUP <img src="{{ asset('assets/img/biohazard.png') }}" alt="Biohazard" class="separator-img"> 
                UNLIMITED.. STUFF <img src="{{ asset('assets/img/biohazard.png') }}" alt="Biohazard" class="separator-img"> 
                VERY COOL AND POG <img src="{{ asset('assets/img/biohazard.png') }}" alt="Biohazard" class="separator-img">
            </div>
        </div>
    </div>
</div>

{# Featured Products Section - ALIGNED #}
<div id="featured-products" class="container py-10 bby"> {# Consistent vertical padding #}
    <div class="text-center mb-8"> {# Increased bottom margin #}
        <h2 class="display-5 mb-3 chakra-petch-bold text-primary font-bold">FEATURED GEAR</h2>
        <p class="lead chakra-petch-regular text-light">Check out our latest and most powerful gaming hardware</p>
    </div>
    
    {# Using Tailwind flexbox for a responsive grid with better alignment #}
    <div class="flex flex-wrap justify-center gap-6 px-[1vw]"> {# Changed from .row g-4 to flex flex-wrap justify-center gap-6 #}
        {% for product in featuredProducts %}
            {# Wrap each product card in a div with responsive width classes #}
            <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 max-w-sm"> {# These classes dictate how many cards per row #}
                {% include 'product/card.html.twig' with {'product': product} %}
            </div>
        {% else %}
            <div class="w-full text-center"> {# Ensures the alert takes full width and is centered #}
                <div class="bg-blue-800 text-blue-100 p-4 rounded-lg shadow-md inline-block">
                    No products available at the moment.
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="text-center mt-8"> {# Increased top margin #}
        <a href="{{ path('app_collections') }}" class="gaming-button">ALL PRODUCTS</a> {# Changed href to app_collections #}
    </div>
</div>
{#
    Note: The rotating catalogue section is not included in this response as per your previous instruction
    to only align products in the featured section and to manage the carousel content manually.
    If you wish to re-add the carousel, please refer to the "full code" response which included it.
#}
{% endblock %}      