{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}GearX - Your Electronics Superstore{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="container-fluid py-5 bg-primary text-white">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 text-white mb-4">Welcome to GearX</h1>
                    <p class="lead mb-4">Your one-stop shop for all electronics and gear. Find the latest technology at the best prices!</p>
                    <a href="#featured-products" class="btn btn-light btn-lg">Shop Now</a>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('assets/img/hero-image.png') }}" alt="Electronics" class="img-fluid rounded" onerror="this.src='{{ asset('assets/img/placeholder.png') }}'">
                </div>
            </div>
        </div>
    </div>
    
    <!-- Featured Products -->
    <div id="featured-products" class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 mb-3">Featured Products</h2>
            <p class="lead">Check out our latest and most popular items</p>
        </div>
        
        <div class="row g-4">
            {% for product in featuredProducts %}
                <div class="col-md-3">
                    <div class="card h-100 shadow-sm">
                        <img src="{{ asset('assets/img/placeholder.png') }}" class="card-img-top p-3" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text text-truncate">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">${{ product.price }}</span>
                                <a href="#" class="btn btn-sm btn-outline-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">No products available at the moment.</div>
                </div>
            {% endfor %}
        </div>
    </div>
    
    <!-- Categories Section -->
    <div class="container-fluid py-5 bg-light">
        <div class="container py-5">
            <div class="text-center mb-5">
                <h2 class="display-5 mb-3">Shop by Category</h2>
                <p class="lead">Browse our wide range of product categories</p>
            </div>
            
            <div class="row g-4">
                {% for category in categories %}
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center">
                                <i class="fas fa-{{ category.name|lower == 'gaming' ? 'gamepad' : (category.name|lower == 'smartphones' ? 'mobile-alt' : (category.name|lower == 'audio' ? 'headphones' : 'laptop')) }} fa-4x text-primary mb-3"></i>
                                <h4 class="card-title">{{ category.name }}</h4>
                                <a href="{{ path('tempp', {'id': category.id}) }}" class="btn btn-outline-primary">View Products</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info">No categories available.</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
