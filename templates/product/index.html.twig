{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <div class="container py-5 mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="chakra-petch-bold text-primary">ALL PRODUCTS</h1>
            
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_product_new') }}" class="gaming-button">NEW PRODUCT</a>
            {% endif %}
        </div>

        <div class="row g-4">
            {% for product in products %}
                {% include 'repeatable/product.html.twig' with {'product': product} %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">No products available at the moment.</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
