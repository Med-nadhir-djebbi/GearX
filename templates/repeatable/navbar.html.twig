
<div class="container-fluid bg-white sticky-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-2">
            <a href="{{ path('tempp') }}" class="navbar-brand">
                <h1 class="fw-bold m-0">GearX</h1>
            </a>

            {# Main Navigation Items #}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    {# Tous nos Rayons Menu #}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Tous nos Rayons
                        </a>
                        <ul class="dropdown-menu">
                            {% for category in categories %}
                                <li class="dropdown-item-wrapper">
                                    <a class="dropdown-item" href="{{ path('tempp', {'id': category.id}) }}">
                                        {{ category.name }}
                                        {% if category.subcategories|length > 0 %}
                                            <i class="fas fa-chevron-right float-end"></i>
                                        {% endif %}
                                    </a>
                                    {% if category.subcategories|length > 0 %}
                                        <div class="submenu">
                                            <ul class="list-unstyled">
                                                {% for subcategory in category.subcategories %}
                                                    <li>
                                                        <a href="{{ path('tempp', {'id': subcategory.id}) }}">
                                                            {{ subcategory.name }}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>

                {# Search Bar #}
                <div class="col-lg-5 mx-auto">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Rechercher un produit, une marque...">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>

                {# User Actions #}
                <div class="d-flex align-items-center ms-auto">
                    {# Account #}
                    <div class="nav-item dropdown me-3">
                        <a href="#" class="nav-link" data-bs-toggle="dropdown">
                            <i class="fas fa-user fa-lg"></i>
                            <span class="d-none d-md-inline ms-2">Mon compte</span>
                        </a>
                        <div class="dropdown-menu rounded-0 border-0 shadow">
                            <a href="{{ path('app_login') }}" class="dropdown-item">Connexion</a>
                            <a href="{{ path('app_register') }}" class="dropdown-item">Inscription</a>
                        </div>
                    </div>

                    {# Cart #}
                    <div class="position-relative me-3">
                        <a href="{{ path('app_cart_index') }}" class="nav-link">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>