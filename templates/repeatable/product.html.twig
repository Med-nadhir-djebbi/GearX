<div class="col-md-3 mb-4">
    <div class="cardy h-[500px] bg-dark">
        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-decoration-none flex flex-col h-full">
            <div class="position-relative flex-3">
                <img src="{{ asset('assets/img/products/' ~ (product.image ?? 'placeholder.jpg')) }}" 
                    class="card-img-top p-3 w-full h-full object-contain" 
                    alt="{{ product.name }}"
                    onerror="this.src='{{ asset('assets/img/placeholder.webp') }}'">
                <div class="product-actions">
                    <button class="action-btn wishlist-btn" data-toggle="tooltip" data-placement="left" title="Add to Wishlist">
                        <i class="fas fa-heart"></i>
                    </button>
                    <button class="action-btn cart-btn" data-toggle="tooltip" data-placement="left" title="Add to Cart">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                </div>
            </div>
            <div class="separator-line"></div>
            <div class="card-body text-light flex-1">
                <div class="flex flex-col h-full p-3">
                    <div class="mb-auto">
                        {% if product.rating %}
                            <div class="rating-stars mb-1">
                                {% for i in 1..5 %}
                                    {% if i <= product.rating %}
                                        <i class="fas fa-star"></i>
                                    {% elseif i <= product.rating + 0.5 %}
                                        <i class="fas fa-star-half-alt"></i>
                                    {% else %}
                                        <i class="far fa-star"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                        <h5 class="card-title chakra-petch font-bold text-xl">{{ product.name }}</h5>
                    </div>
                    <div class="mt-auto">
                        <p class="sora-light text-lg">${{ product.price }}</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>