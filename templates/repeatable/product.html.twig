<div class="col-md-3">
                    <div class="card h-100 bg-dark border-0" style="border: 1px solid var(--primary) !important; overflow: hidden;">
                        <div class="position-relative">
                            <img src="{{ asset('assets/img/products/' ~ (product.image ?? 'placeholder.jpg')) }}" 
                                class="card-img-top p-3" 
                                alt="{{ product.name }}"
                                onerror="this.src='{{ asset('assets/img/placeholder.webp') }}'">
                        </div>
                        <div class="card-body text-light">
                            <h5 class="card-title chakra-petch-bold text-primary">{{ product.name }}</h5>
                            <p class="card-text text-truncate chakra-petch-light">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="h5 text-highlight chakra-petch-bold">${{ product.price }}</span>
                                    {% if product.rating %}
                                        <div class="text-warning">
                                            {% for i in 1..5 %}
                                                {% if i <= product.rating %}
                                                    <i class="fas fa-star"></i>
                                                {% elseif i <= product.rating + 0.5 %}
                                                    <i class="fas fa-star-half-alt"></i>
                                                {% else %}
                                                    <i class="far fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                            <small class="text-light">({{ product.rating }})</small>
                                        </div>
                                    {% endif %}
                                </div>
                                <a href="#" class="gaming-button btn-sm">ADD</a>
                            </div>
                        </div>
                    </div>
                </div>