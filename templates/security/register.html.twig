{% extends 'base.html.twig' %}

{% block title %}Register - GearX{% endblock %}

{% block body %}
<div class="container pb-64 pt-32 bby">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-dark-gray p-5 shadow-lg surround">
                <div class="text-center mb-4">
                    <h1 class="chakra-petch-bold text-8xl font-bold">REGISTER</h1>
                    <div class="separator-line my-3"></div>
                    <p class="chakra-petch-light text-lighter">Join the GearX community and unlock exclusive gaming gear</p>
                </div>
                
                {% if app.user %}
                    <div class="alert alert-info border border-primary mb-4">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        You are already logged in as {{ app.user.username }}
                        <a href="{{ path('app_logout') }}" class="text-primary ms-2">Logout</a>
                    </div>
                {% endif %}

                <div class="form-container">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <div class="form-outline">
                                {{ form_label(form.username, 'USERNAME', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter'}}) }}
                                {{ form_widget(form.username, {'attr': {
                                    'class': 'form-control bg-darker border-zinc-700 text-lighter',
                                    'placeholder': 'Choose a username'
                                }}) }}
                                <div class="invalid-feedback text-danger">
                                    {{ form_errors(form.username) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <div class="form-outline">
                                {{ form_label(form.email, 'EMAIL', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter'}}) }}
                                {{ form_widget(form.email, {'attr': {
                                    'class': 'form-control bg-darker border-zinc-700 text-lighter',
                                    'placeholder': 'Your email address'
                                }}) }}
                                <div class="invalid-feedback text-danger">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="form-outline">
                                {{ form_label(form.password.first, 'PASSWORD', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter'}}) }}
                                {{ form_widget(form.password.first, {'attr': {
                                    'class': 'form-control bg-darker border-zinc-700 text-lighter',
                                    'placeholder': 'Create a password'
                                }}) }}
                                <div class="invalid-feedback text-danger">
                                    {{ form_errors(form.password.first) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="form-outline">
                                {{ form_label(form.password.second, 'CONFIRM PASSWORD', {'label_attr': {'class': 'form-label chakra-petch-medium text-lighter'}}) }}
                                {{ form_widget(form.password.second, {'attr': {
                                    'class': 'form-control bg-darker border-zinc-700 text-lighter',
                                    'placeholder': 'Confirm your password'
                                }}) }}
                                <div class="invalid-feedback text-danger">
                                    {{ form_errors(form.password.second) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        {{ form_widget(form.submit, {'attr': {
                            'class': 'gaming-button btn-block',
                            'value': 'REGISTER NOW'
                        }}) }}
                    </div>
                    
                    {{ form_end(form) }}
                </div>
                
                <div class="mt-4 text-center">
                    <p class="text-lighter">Already have an account? 
                        <a href="{{ path('app_login') }}" class="text-primary">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
